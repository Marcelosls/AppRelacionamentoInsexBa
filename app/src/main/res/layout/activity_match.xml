<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/matchLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F5"
    android:padding="24dp"
    tools:context=".activities.MatchActivity">

    <TextView
        android:id="@+id/matchText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VocÃª deu Match!"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#183A5A"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <LinearLayout
        android:id="@+id/imageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/matchText"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/userImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_image" />

        <ImageView
            android:id="@+id/matchImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="16dp"
            android:background="@drawable/rounded_image" />
    </LinearLayout>

    <Button
        android:id="@+id/btnContinuar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="117dp"
        android:backgroundTint="#183A5A"
        android:text="Continuar"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
</RelativeLayout>
